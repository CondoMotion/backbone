= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, remote: true) do |f|
  .form-inputs
    = f.input :password, :autocomplete => "off", :label => "New password", :required => false
    = f.input :password_confirmation, label: "Confirm new password", :required => false
    = f.input :current_password, :required => true
  .form-actions
    = f.button :submit, "Update", class: "btn btn-primary"