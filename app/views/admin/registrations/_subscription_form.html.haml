= simple_form_for(@subscription, url: admin_subscription_path(@subscription), remote: true) do |f|
  = hidden_field_tag :active_tab, "subscription"
  = f.input :name, label: "Billing name"
  = f.input :email, label: "Billing email"
  = f.association :plan, label_method: :titleized_name, include_blank: false
  = f.button :submit, "Update", class: "btn btn-primary"