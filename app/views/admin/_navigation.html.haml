%nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      - if current_page? dashboard_path
        = link_to current_user.company.name, "", class: "navbar-brand", onclick: "event.preventDefault();"
      - else
        = link_to current_user.company.name, dashboard_path, class: "navbar-brand"
      %button.navbar-toggle{ data: { toggle: "collapse", target: "#navbar-collapse"} }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        - if current_page? dashboard_path
          %li.active= link_to "Dashboard", "", onclick: "event.preventDefault();"
        - else
          %li= link_to "Dashboard", dashboard_path
        %li{class: ("active" if params[:controller] == "registrations")}= link_to "Edit Profile", edit_user_registration_path
        %li= link_to "Sign Out", destroy_user_session_path, method: :delete