.form-header
  .pull-left
    = link_to "In Progress", "#", class: "btn btn-info no-radius", style: "margin-right: 10px;"
    Assigned to 
    %strong Ed Hofeller 
    %span.caret
  .pull-right
    = link_to "Close", "#", class: "btn btn-link cancel"
.form-container
  .scrollable
    .pad-20.grey  
      %h3{style: "font-weight: 400; font-size: 20px; margin: 0 0 10px 0;"} Issue Subject
      %p{style: "margin: 0;"}
        %span.muted{style: "color: #888; font-weight: 200;"} Created By:
        User Name
      %p{style: "margin: 0;"}
        %span.muted{style: "color: #888; font-weight: 200;"} Resident Email:
        email@example.com
      %p{style: "margin: 0;"}
        %span.muted{style: "color: #888; font-weight: 200;"} Property:
        Clarendon Hill
      %p{style: "margin: 0;"}
        %span.muted{style: "color: #888; font-weight: 200;"} Created:
        Date
    .pad-20

      %ul.nav.nav-tabs
        %li.active= link_to "Message", "#message", data: {toggle: "tab"}
        %li= link_to "Note", "#note", data: {toggle: "tab"}
      .tab-content
        .tab-pane.active#message
          .well.no-margin
            .form-group
              = text_area_tag :notes, "", placeholder: "Email an update to the resident who created this issue", rows: 5, class: "form-control"
            .form-group
              %label Attach a File
              %input{type: "file"}
            = link_to "Send Message", "#", class: "btn btn-primary cancel"
        .tab-pane#note
          .well.no-margin
            .form-group
              = text_area_tag :notes, "", placeholder: "Post an internal note to this issue (the resident will not be notified)", rows: 5, class: "form-control"
            .form-group
              %label Attach a File
              %input{type: "file"}
            = link_to "Add Note", "#", class: "btn btn-primary cancel"
    .issue-message
      %p
        %small Date
        %br
        %small Name
