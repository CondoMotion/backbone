.text-uppercase
  = prototype_partial_link icon('long-arrow-left', 'Back'), "navigation::edit_nav", ".sidebar-nav__panel-secondary", class: "nav-link"
%div{style: "padding: 0 15px;"}
  %h4.nav-heading
    Blog Settings
    = link_to icon('files-o'), prototype_page_path(page: "blogs::posts"), remote: true, class: "prototype-partial-link btn btn-xs btn-default pull-right", data: { target: ".sidebar-nav__panel-secondary" }
  .form-group
    = label_tag :page_title, "Title", class: "control-label"
    = text_field_tag :page_title, "Blog", class: "form-control"
  .form-group
    = label_tag :page_slug, "Slug", class: "control-label"
    = text_field_tag :page_slug, "blog", class: "form-control"
  .form-group
    = label_tag :page_seo_description, "SEO Description", class: "control-label"
    = text_area_tag :page_seo_description, "SEO Description", class: "form-control", rows: 5
  .checkbox
    %label
      = check_box_tag :visible, "", checked: true
      Published
  .checkbox
    %label
      = check_box_tag :visible
      Visible to logged in users only
  %p
    = link_to icon("home", "Set as Homepage"), "#", class: "btn btn-default btn-xs"
  .btn-group{style: "width: 100%;"}
    = prototype_partial_link "Save", "navigation::edit_nav", ".sidebar-nav__panel-secondary", class: "btn btn-default", style: "width: 33.3333%;"
    = prototype_partial_link "Cancel", "navigation::edit_nav", ".sidebar-nav__panel-secondary", class: "btn btn-default", style: "width: 33.3333%;"
    = prototype_partial_link "Delete", "navigation::edit_nav", ".sidebar-nav__panel-secondary", class: "btn btn-default btn-danger-hover", style: "width: 33.3333%;"