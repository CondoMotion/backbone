.form-header
  %h4.pull-left User Name
  .pull-right
    = link_to "Close", "#", class: "btn btn-link cancel"
    = link_to "Save Changes", "#", class: "btn btn-primary cancel"
.form-container
  .scrollable
    .pad-20
      %ul.nav.nav-tabs
        %li.active= link_to raw("<i class='glyphicon glyphicon-user'></i> Basic Info"), "#basic-info", data: {toggle: "tab"}
        %li= link_to raw("<i class='glyphicon glyphicon-lock'></i> Permissions"), "#permissions", data: {toggle: "tab"}
        %li= link_to raw("<i class='glyphicon glyphicon-th-list'></i> Memberships"), "#memberships", data: {toggle: "tab"}
        %li= link_to raw("<i class='glyphicon glyphicon-fire'></i> Activity"), "#activity", data: {toggle: "tab"}
      .tab-content
        .tab-pane.active#basic-info
          %h4 Basic Info
          .form-group  
            = text_field_tag :name, "User Name", autofocus: true, class: "form-control", style: "font-weight: 400; font-size: 20px; padding: 22px 12px;"
          .form-group
            = text_field_tag :email, "email@example.com", class: "form-control"
          .form-group
            = text_field_tag :phone, "555-555-5555", class: "form-control"

        .tab-pane#permissions
          %h4 Permissions
          .form-group
            = select_tag :user_role, options_for_select([ "Manager", "Owner", "Resident" ], "Manager"), class: "form-control"
          #manager_permissions
            .checkbox
              %label
                %input{type: "checkbox", checked: true}
                Can this user manage company info?
            .checkbox
              %label
                %input{type: "checkbox"}
                Can this user manage billing info?
            .checkbox
              %label
                %input{type: "checkbox", checked: true}
                Can this user assign new tickets to other managers?
          #resident_permissions{style: "display: none;"}
        .tab-pane#memberships
          %h4 Memberships
          .row
            .col-xs-8
              .form-group
                = select_tag :property, options_for_select([ "Clarendon Hill", "Jamaica Pond" ], "Clarendon Hill"), class: "form-control"
            .col-xs-4
              .form-group
                = select_tag :property_role, options_for_select(["Manager", "Trustee", "Owner", "Resident"], "Manager"), class: "form-control"
        .tab-pane#activity
          %h4 User Activity
          .well
            User Name submitted an issue with the subject
            %strong= link_to "Issue Subject", "#"
            2 days ago