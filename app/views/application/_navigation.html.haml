%nav.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      = link_to "Condo Motion", root_url, class: (current_page?(root_url) ? "navbar-brand active" : "navbar-brand")
      %button.navbar-toggle{ data: { toggle: "collapse", target: "#navbar-collapse"} }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: (current_page?(root_url) ? "active" : "")}= link_to "Home", root_url
        %li{class: (current_page?(about_url) ? "active" : "")}= link_to "About", about_url
        %li{class: (current_page?(pricing_url) ? "active" : "")}= link_to "Pricing", pricing_url
        %li{class: (current_page?(contact_url) ? "active" : "")}= link_to "Contact", contact_url
        - if user_signed_in?
          %li= link_to "Dashboard", dashboard_url
        - else
          %li{class: (current_page?(new_user_session_path) ? "active" : "")}= link_to "Sign In", new_user_session_path
          - if params[:controller] == "registrations" && params[:action] == "new"
            %li{class: "active"}= link_to "Sign Up", "", onclick: "event.preventDefault();"
          - else
            %li= link_to "Sign_up", pricing_path