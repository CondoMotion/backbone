%nav.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      = link_to "Condo Motion", root_url, class: "navbar-brand"
      %button.navbar-toggle{ data: { toggle: "collapse", target: "#navbar-collapse"} }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
    #navbar-collapse.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "About", about_url
        %li= link_to "Pricing", pricing_url
        %li= link_to "Contact", contact_url
        - if user_signed_in?
          %li= link_to "Dashboard", dashboard_url
          %li= link_to "Sign Out", destroy_user_session_path, method: :delete
        - else
          %li= link_to "Sign In", new_user_session_path
          %li= link_to "Sign Up", new_user_registration_path