%nav.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      = link_to root_url, class: (current_page?(root_url) ? "navbar-brand active" : "navbar-brand"), style: "padding: 20px 15px;" do
        = image_tag('building-logo-light.png', style: "height: 40px;")
      %button.navbar-toggle{ data: { toggle: "collapse", target: "#navbar-collapse" } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar


    #navbar-collapse.collapse.navbar-collapse
      / %ul.nav.navbar-nav
      /   = nav_link_to "Home", root_url
      /   = nav_link_to "About", about_url
      /   = nav_link_to "Pricing", pricing_url
      /   = nav_link_to "Contact", contact_url
      = link_to "Schedule a Demo", prototype_path, class: "btn btn-success btn-outline navbar-btn navbar-right"